@page
@model CIDM3312_Final.Pages.Players.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Player</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Player.PlayerId" />
            <div class="form-group">
                <label asp-for="Player.PlayerName" class="control-label"></label>
                <input asp-for="Player.PlayerName" class="form-control" />
                <span asp-validation-for="Player.PlayerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.KDRatio" class="control-label"></label>
                <input asp-for="Player.KDRatio" class="form-control" />
                <span asp-validation-for="Player.KDRatio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.AvgCombatScore" class="control-label"></label>
                <input asp-for="Player.AvgCombatScore" class="form-control" />
                <span asp-validation-for="Player.AvgCombatScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.Role" class="control-label"></label>
                <input asp-for="Player.Role" class="form-control" />
                <span asp-validation-for="Player.Role" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.Origin" class="control-label"></label>
                <input asp-for="Player.Origin" class="form-control" />
                <span asp-validation-for="Player.Origin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Player.TeamID" class="control-label"></label>
                <select asp-for="Player.TeamID" class="form-control" asp-items="ViewBag.TeamID"></select>
                <span asp-validation-for="Player.TeamID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
